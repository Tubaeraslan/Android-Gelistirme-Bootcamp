<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/ivUrunResim"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvUrunAdi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ürün Adı"
        android:textSize="16sp"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/ivUrunResim"
        app:layout_constraintTop_toTopOf="@id/ivUrunResim"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/tvUrunFiyat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10 ₺"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/tvUrunAdi"
        app:layout_constraintTop_toBottomOf="@id/tvUrunAdi"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/tvUrunAdet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adet: 1"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/tvUrunFiyat"
        app:layout_constraintTop_toTopOf="@id/tvUrunFiyat"
        android:layout_marginStart="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
