<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".uı.fragment.DetayFragment">

    <!-- Başlık -->
    <TextView
        android:id="@+id/tvDetayBaslik"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Görev Başlığı"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Açıklama -->
    <TextView
        android:id="@+id/tvDetayAciklama"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Göreve ait detaylı açıklama burada yer alır."
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDetayBaslik" />

    <!-- Tarih -->
    <TextView
        android:id="@+id/tvDetayTarih"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Son Tarih: 17 Mayıs 2025"
        android:textColor="#777"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDetayAciklama" />

    <!-- Düzenle Butonu -->
    <Button
        android:id="@+id/btnDuzenle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Düzenle"
        app:layout_constraintTop_toBottomOf="@id/tvDetayTarih"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnSil"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp" />

    <!-- Sil Butonu -->
    <Button
        android:id="@+id/btnSil"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sil"
        app:layout_constraintTop_toTopOf="@id/btnDuzenle"
        app:layout_constraintStart_toEndOf="@id/btnDuzenle"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>